{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("swishdigital\\outofstock\\assetbundles\\outofstock\\OutOfStockAsset") %}

{{ forms.textField({
    label: 'Stock Threshold',
    instructions: 'When to send out the notification',
    id: 'stockThreshold',
    name: 'stockThreshold',
    value: settings['stockThreshold']})
}}

{{ forms.lightswitchField({
    label: 'Send Email?',
    id: 'sendEmail',
    name: 'sendEmail',
    on: settings['sendEmail']})
}}

{{ forms.textField({
    label: 'Recipients',
    instructions: 'Separate multiple addresses with a comma',
    id: 'recipients',
    name: 'recipients',
    value: settings['recipients']})
}}

{{ forms.textField({
    label: 'Email Template Path',
    instructions: 'Path to your email template',
    id: 'emailTemplatePath',
    name: 'emailTemplatePath',
    value: settings['emailTemplatePath']})
}}

{{ forms.textField({
    label: 'Email Subject',
    id: 'emailSubject',
    name: 'emailSubject',
    value: settings['emailSubject']})
}}

